<div class="contact-form-wrapper px-2">
<section role="Contact us form" class="container mx-auto body-text  shadow p-5 contact-form bg-white">
    <form role="form" id="contactForm">
    <div class="row mb-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" placeholder="Your full name" class="form-control" id="name" name="name" required>
    </div>
    <div class="col-md-6">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" placeholder="Your email address" class="form-control" id="email" name="email" required>
    </div>
    </div>
    <!-- Add additional fields as necessary... -->
    <div class="row">
    <div class="col-12 mb-3">
        <label for="subject" class="form-label">Subject</label>
        <input type="text" placeholder="E.g., Membership Inquiry, Event Question, Coaching Information" class="form-control" id="subject" name="subject" required>
    </div>
    <div class="col-12 mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" placeholder="Let us know how we can assist you. E.g., inquire about our membership, upcoming events, or coaching sessions."  id="message" name="message" required></textarea>
    </div>
    </div>
    <button type="submit" class="form-button btn ">Submit</button>
</form>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
        
        e.preventDefault();

        //Get form data from form object    
        const formData = new FormData(this);
        //Pass form data to data object
        const data = Object.fromEntries(formData);

        fetch('/.netlify/functions/emailContact', {
            method: 'POST',
            body: JSON.stringify(data),
            headers: { 'Content-Type': 'application/json' }
        })
        
        .then(response => {
            console.log(response);
            return response.json();
        })
        .catch((error) => {
            console.error('Error:', error);
            console.log('Error during post');
            });
         });
    </script>

   
</section>
</div>